<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="tab.Mine">

    <!--<include layout="@layout/common_title"></include>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_180"
        android:background="@drawable/mine_headrl">

        <ImageView
            android:id="@+id/mine_headimg"
            android:layout_width="@dimen/qb_px_70"
            android:layout_height="@dimen/qb_px_70"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/qb_px_25"
            android:background="@drawable/kcsj_head" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mine_headimg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/qb_px_5"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/welcom_size" />

        <TextView
            android:id="@+id/usertype_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/qb_px_5"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/modify_pwd"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="@color/white"
            android:padding="@dimen/qb_px_5">

            <ImageView
                android:id="@+id/changepwd"
                android:layout_width="@dimen/qb_px_40"
                android:layout_height="@dimen/qb_px_40"
                android:layout_centerVertical="true"
                android:background="@drawable/modify_pwd" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/qb_px_20"
                android:layout_toRightOf="@+id/changepwd"
                android:text="@string/xgmm" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/mine_version_check"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/qb_px_1"
            android:layout_weight="0.5"
            android:background="@color/white"
            android:padding="@dimen/qb_px_5">

            <ImageView
                android:id="@+id/version_check"
                android:layout_width="@dimen/qb_px_40"
                android:layout_height="@dimen/qb_px_40"
                android:layout_centerVertical="true"
                android:background="@drawable/check_version" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/qb_px_20"
                android:layout_toRightOf="@+id/version_check"
                android:text="@string/jcbb" />


            <TextView
                android:id="@+id/version_check_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/qb_px_20"
                android:layout_marginRight="@dimen/qb_px_20"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text=""
                 />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/clear_cache"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/qb_px_1"
            android:layout_weight="0.5"
            android:background="@color/white"
            android:padding="@dimen/qb_px_5">

            <ImageView
                android:id="@+id/clearcache"
                android:layout_width="@dimen/qb_px_40"
                android:layout_height="@dimen/qb_px_40"
                android:layout_centerVertical="true"
                android:background="@drawable/clear_cache" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/qb_px_20"
                android:layout_toRightOf="@+id/clearcache"
                android:text="@string/qkhc" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mine_about"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/qb_px_1"
            android:layout_weight="0.5"
            android:background="@color/white"
            android:padding="@dimen/qb_px_5">

            <ImageView
                android:id="@+id/about"
                android:layout_width="@dimen/qb_px_40"
                android:layout_height="@dimen/qb_px_40"
                android:layout_centerVertical="true"
                android:background="@drawable/about" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/qb_px_20"
                android:layout_toRightOf="@+id/about"
                android:text="@string/gy" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mine_cancellation_rl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/qb_px_40"
            android:layout_marginTop="@dimen/qb_px_30"
            android:layout_weight="0.3"
            android:background="@color/white"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zx" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
