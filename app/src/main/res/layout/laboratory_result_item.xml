<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/qb_px_15"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/laboratory_cardview"
    app:cardCornerRadius="@dimen/qb_px_10"
    app:cardElevation="@dimen/qb_px_8">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/laboratory_result_item_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/qb_px_20"
            android:background="@drawable/laboratory_result_item_img" />

        <TextView
            android:id="@+id/jcbh_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/qb_px_10"
            android:layout_toRightOf="@+id/laboratory_result_item_img"
            android:padding="@dimen/qb_px_5"
            android:text=""
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/yybh_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jcbh_tv"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/qb_px_10"
            android:layout_toRightOf="@+id/laboratory_result_item_img"
            android:padding="@dimen/qb_px_5"
            android:text=""
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/auys_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/yybh_tv"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/qb_px_10"
            android:layout_toRightOf="@+id/laboratory_result_item_img"
            android:padding="@dimen/qb_px_5"
            android:text=""
            android:textColor="@color/white" />

    </RelativeLayout>
</android.support.v7.widget.CardView>